<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_800_480" android:clickable="true" android:weightSum="1">
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <ImageButton android:scaleType="fitCenter" android:id="@+id/hostBtn" android:background="@android:color/transparent" android:layout_height="120dp" android:layout_width="100dp" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_marginLeft="31dp" android:layout_marginBottom="141dp"></ImageButton>
        <ImageButton android:scaleType="fitCenter" android:id="@+id/clientBtn" android:background="@android:color/transparent" android:layout_height="90dp" android:layout_width="85dp" android:layout_above="@+id/hostBtn" android:layout_alignParentRight="true" android:layout_marginRight="31dp" android:layout_marginBottom="-60dp"></ImageButton>
        <ImageButton android:id="@+id/QRcodeBtn" android:src="@drawable/qrcode" android:layout_alignParentBottom="true" android:background="@android:color/transparent" android:layout_alignParentLeft="true" android:layout_marginLeft="16dp" android:layout_height="30dp" android:layout_width="30dp" android:scaleType="fitXY" android:layout_marginBottom="16dp"></ImageButton>
        <ImageView android:src="@drawable/cover" android:clickable="true" android:layout_height="fill_parent" android:scaleType="fitXY" android:id="@+id/cover" android:layout_width="wrap_content"></ImageView>
        
    </RelativeLayout>


</LinearLayout>
