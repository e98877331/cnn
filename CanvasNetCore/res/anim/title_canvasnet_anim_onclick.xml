<set xmlns:android="http://schemas.android.com/apk/res/android"
	android:shareInterpolator="false"  >

		<scale android:interpolator="@android:anim/accelerate_decelerate_interpolator"
			android:fromXScale="1.0" android:toXScale="1.3" android:fromYScale="1.0"
			android:toYScale="0.7" android:pivotX="50%" android:pivotY="50%"
			android:fillAfter="false" android:duration="400" android:repeatCount="3" 
        android:repeatMode="reverse"/>
			
		<rotate android:fromDegrees="18" android:toDegrees="-18" android:interpolator="@android:anim/accelerate_decelerate_interpolator"
			android:toYScale="0.0" android:pivotX="50%" android:pivotY="50%"
			 android:duration="200" android:repeatCount="6" 
        android:repeatMode="reverse"/>

	
</set>
